{
  "name": "settermjd/laminas-twilio-phone-number-validator",
  "description": "A laminas-validator class that validates phone numbers using Twilio's Verify API",
  "license": "BSD-3-Clause",
  "keywords": [
    "laminas",
    "validator",
    "twilio",
    "verify"
  ],
  "support": {
    "docs": "https://github.com/laminas/laminas-validator/docs",
    "issues": "https://github.com/laminas/laminas-validator/issues",
    "source": "https://github.com/laminas/laminas-validator",
    "rss": "https://github.com/laminas/laminas-validator/releases.atom"
  },
  "autoload": {
    "psr-4": {
      "Settermjd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SettermjdTest\\": "test/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@static-analysis",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "docs-check": "markdownlint --config .markdownlint.yaml README.md",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "static-analysis": "psalm --shepherd --stats"
  },
  "require": {
    "php": "~8.3.0 || ~8.4.0",
    "laminas/laminas-coding-standard": "^3.0",
    "laminas/laminas-validator": "^3.0.0",
    "twilio/sdk": "^8.3",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "laminas/laminas-cache": "^4.0",
    "phpunit/phpunit": "^10.5",
    "psalm/plugin-phpunit": "^0.19.0",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.10",
    "vimeo/psalm": "^5.26"
  },
  "suggest": {
    "laminas/laminas-cache-storage-adapter-apcu": "The APCu implementation of laminas-cache",
    "laminas/laminas-cache-storage-adapter-memcached": "The Memcached implementation of laminas-cache",
    "laminas/laminas-cache-storage-adapter-memory": "The Memory implementation of laminas-cache",
    "laminas/laminas-cache-storage-adapter-redis": "The Redis implementation of laminas-cache",
    "symfony/cache": "Symfony's cache component",
    "cache/filesystem-adapter": "A PSR-6 cache implementation using filesystem, which supports tagging.",
    "cache/apcu-adapter": "A PSR-6 cache implementation using apcu, which supports tagging",
    "cache/redis-adapter": "A PSR-6 cache implementation using Redis (PhpRedis), which supports tagging.",
    "cache/memcached-adapter": "A PSR-6 cache implementation using Memcached, which supports tagging."
  }
}
